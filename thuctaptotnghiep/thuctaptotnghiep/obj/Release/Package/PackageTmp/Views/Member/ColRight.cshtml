<script>
    $(".change-password").click(function () {
        $(".reset-password").slideToggle();
    })
    $(".save-password").click(function () {
        var first = $(".first-pasword-reset").val();
        var second = $(".second-pasword-reset").val();
        if (first == "") {
            $("#password-nosame").show().html("Vui lòng nhập mật khẩu");
            return false;
        }
        if(second=="") {
            $("#password-nosame").show().html("Vui lòng nhập mật khẩu");
            return false;
        }
        if (first.length < 6) {
            $("#password-nosame").show().html("Độ dài mật khẩu tối thiểu 6 ký tự");
            return false;
        }
        if (first == second) {
            alert("Thay đổi mật khẩu thành công")
            return true;
        }
        else {
            $("#password-nosame").show();
            return false;

        }
    })
</script>