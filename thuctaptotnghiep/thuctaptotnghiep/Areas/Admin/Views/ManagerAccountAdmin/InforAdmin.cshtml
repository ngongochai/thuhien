@model Model.Framework.UngVien
<script type="text/javascript" async="" src="~/Content/Employer/Signup/dc.js"></script>
<script src="~/Content/Employer/Signup/register.js"></script>
<div class="ibox-content m-t" id="company">
    <div class="panel-body row">
        <div class="col-sm-10">
            <div class="float-e-margins animated fadeInRight">
                <div class="content">
                    <h2>
                        <span class="circle-wrapper"><i class="fa fa-building-o"></i></span>
                        Thông Tin TÀI KHOẢN
                    </h2>
                    <form name="profile" method="post" action="/ManagerAccountAdmin/InforAdmin" id="profile_form" novalidate="novalidate" class="select-remove-width form-horizontal">
                        <!--Company Address-->
                        <fieldset class="m-t-lg" aria-hidden="false">
                            <div class="form-group">
                                <label class="col-sm-3 control-label required" for="profile_name" aria-required="true">Tên</label>
                                <div class="col-sm-9">
                                    <input type="text" id="profile_name" name="Ten" required="required" maxlength="255" placeholder="Ví dụ: A,An" tabindex="9" class="form-control" value="@Model.Ten" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label required" for="profile_contact_name" aria-required="true">Họ</label>
                                <div class="col-sm-9">
                                    <input type="text" required id="profile_contact_name" name="Hovatendem" maxlength="100" value="@Model.Hovatendem" placeholder="Ví dụ: Nguyen Van" tabindex="13" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label required" for="profile_contact_name" aria-required="true">Chức Vụ</label>
                                <div class="col-sm-9">
                                    <input type="text" required id="chucdanh" name="Chucdanh" maxlength="100" value="@Model.Chucdanh" placeholder="Ví dụ: Giám đốc tại công ty abc" tabindex="13" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="m-t-n-xs col-sm-3 control-label" data-optional-text="&lt;br/&gt;&lt;small&gt;&lt;/small&gt;" for="profile_address">Địa Chỉ Hiện tại<br><small>(Không bắt buộc)</small></label>
                                <div class="col-sm-9">
                                    <input type="text" id="profile_address" name="Diachihientai" maxlength="255" placeholder="Ví dụ: Số 20 Tăng Nhơn Phú, P. Phước Long B, Quận 9, TP.HCM" tabindex="11" class="form-control" value="@Model.Diachihientai">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label required" for="profile_phone_number" aria-required="true">Điện Thoại</label>
                                <div class="col-sm-9">
                                    <input type="text" id="profile_phone_number" name="Dienthoai1" required="required" maxlength="20" placeholder="Số điện thoại liên hệ" tabindex="14" class="form-control" value="@Model.Dienthoai1" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label required" for="profile_phone_number" aria-required="true">Ngày sinh</label>
                                <div class="col-sm-9">
                                    @if (Model.Ngaysinh != null)
                                    {
                                        <input type="date" id="ngaysinh" name="Ngaysinh" tabindex="14" class="form-control" value="@Model.Ngaysinh.Value.Date.ToString("yyyy-MM-dd")" aria-required="true">
                                    }
                                    else
                                    {
                                        <input type="date" id="ngaysinh" name="Ngaysinh" tabindex="14" class="form-control" aria-required="true">
                                    }
                                    
                                </div>
                            </div>
                        </fieldset>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="text-right col-sm-12">
                                <button class="btn btn-primary" type="button" id="save_profile_change" tabindex="18">Lưu</button>
                            </div>
                        </div>
                        <input type="hidden" value="@Model.MAUV" name="MAUV"/>
                    </form>
                </div>
            </div>

            <div id="loading_template" hidden="hidden">
                Đang tải...
            </div>
        </div>
    </div>
</div>
